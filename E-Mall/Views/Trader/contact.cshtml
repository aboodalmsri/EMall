@model E_Mall.Models.Contact

@{
    Layout = "_MerchantLayout";

    ViewBag.Title = "تواصل معنا";
}

<div class="container contact-us-page">
    <!-- العنوان الرئيسي -->
    <h1 class="text-center mb-5">تواصل معنا</h1>

    <!-- معلومات الاتصال -->
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="stat-box">
                <i class="fas fa-envelope"></i>
                <h3>البريد الإلكتروني</h3>
                <p><a href="mailto:info@example.com">info@example.com</a></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-box">
                <i class="fas fa-phone"></i>
                <h3>رقم الهاتف</h3>
                <p><a href="tel:+1234567890">+1234567890</a></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-box">
                <i class="fas fa-map-marker-alt"></i>
                <h3>العنوان</h3>
                <p>123 Main Street, City, Country</p>
            </div>
        </div>
    </div>

    <!-- نموذج الاتصال -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <div class="card contact-form">
                <div class="card-body">
                    <form asp-action="contact" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">الاسم</label>
                            <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="أدخل اسمك">
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                            <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="أدخل بريدك الإلكتروني">
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label">الموضوع</label>
                            <input asp-for="Subject" type="text" class="form-control" id="Subject" placeholder="أدخل موضوع الرسالة">
                            <span asp-validation-for="Subject" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label asp-for="Message" class="form-label">الرسالة</label>
                            <textarea asp-for="Message" class="form-control" id="Message" rows="5" placeholder="أدخل رسالتك"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary dashboard-btn">إرسال</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
else if (ViewBag.Errormsg != null)
{
    <div class="alert alert-danger">@ViewBag.Errormsg</div>
}
