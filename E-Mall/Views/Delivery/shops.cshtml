@{
    Layout = "_DeliveryLayout";

    ViewBag.Title = "shops";
}

<div class="container stores-page">
    <h1 style="text-align:center;">قائمة المتاجر</h1>

    <!-- شريط البحث -->
    <div class="mb-3">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="ابحث عن متجر...">
            <button class="btn btn-primary" type="button" style="margin-top:15px;">بحث</button>
        </div>
    </div>

    <!-- شريط الفلترة -->
    <div class="mb-3">
        <div class="row">
            <div class="col-md-4">
                <label for="categoryFilter" class="form-label">تصنيف المتجر:</label>
                <select class="form-select" id="categoryFilter">
                    <option value="">جميع التصنيفات</option>
                    <option value="1">الملابس</option>
                    <option value="2">الأجهزة الإلكترونية</option>
                    <option value="3">الكتب</option>
                    <!-- المزيد من التصنيفات -->
                </select>
            </div>
            <!-- المزيد من خيارات الفلترة (نطاق جغرافي، تقييم، إلخ) -->
        </div>
    </div>

    <!-- عرض المتاجر -->
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="~/img/store1.png" class="card-img-top" alt="اسم المتجر">
                <div class="card-body">
                    <h5 class="card-title">اسم المتجر 1</h5>
                    <p class="card-text">وصف موجز للمتجر 1...</p>
                    <p class="card-text">التصنيف: الملابس</p>
                    <p class="card-text">التقييم: ★★★★☆</p>
                    <a href="#" class="btn btn-primary">عرض المتجر</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="~/img/store1.png" class="card-img-top" alt="اسم المتجر">
                <div class="card-body">
                    <h5 class="card-title">اسم المتجر 2</h5>
                    <p class="card-text">وصف موجز للمتجر 2...</p>
                    <p class="card-text">التصنيف: الأجهزة الإلكترونية</p>
                    <p class="card-text">التقييم: ★★★☆☆</p>
                    <a href="#" class="btn btn-primary">عرض المتجر</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="~/img/store1.png" class="card-img-top" alt="اسم المتجر">
                <div class="card-body">
                    <h5 class="card-title">اسم المتجر 3</h5>
                    <p class="card-text">وصف موجز للمتجر 3...</p>
                    <p class="card-text">التصنيف: الأجهزة الإلكترونية</p>
                    <p class="card-text">التقييم: ★★★☆☆</p>
                    <a href="#" class="btn btn-primary">عرض المتجر</a>
                </div>
            </div>
        </div>
        <!-- المزيد من المتاجر -->
    </div>

    <!-- ترقيم الصفحات -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">السابق</a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item" aria-current="page">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">التالي</a>
            </li>
        </ul>
    </nav>
</div>