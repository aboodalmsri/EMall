@{
    ViewBag.Title = "products";
}

<div class="container products-page">
    <h1 ="text-align:center;">قائمة المنتجات</h1>

    <!-- شريط البحث -->
    <div class="mb-3">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="ابحث عن منتج...">
            <button class="btn btn-primary" type="button" style="margin-top:15px;">بحث</button>
        </div>
    </div>

    <!-- شريط الفلترة -->
    <div class="mb-3">
        <div class="row">
            <div class="col-md-3">
                <label for="categoryFilter" class="form-label">تصنيف المنتج:</label>
                <select class="form-select" id="categoryFilter">
                    <option value="">جميع التصنيفات</option>
                    <option value="1">الملابس</option>
                    <option value="2">الأجهزة الإلكترونية</option>
                    <option value="3">الكتب</option>
                    <!-- المزيد من التصنيفات -->
                </select>
            </div>
            <div class="col-md-4">
                <label for="priceRange" class="form-label fw-bold">نطاق السعر:</label>
                <div class="range-container">
                    <input type="range" class="form-range" id="priceRange" min="0" max="10000" step="10" value="5000">
                    <div class="range-value" id="rangeValue">5000</div>
                </div>
                <div class="d-flex justify-content-between mt-2 text-secondary">
                    <span>0</span>
                    <span>10000</span>
                </div>
            </div>

            <script>
                const priceRange = document.getElementById("priceRange");
                const rangeValue = document.getElementById("rangeValue");

                // تحديث قيمة النطاق عند تغييره
                priceRange.addEventListener("input", function() {
                    rangeValue.textContent = priceRange.value;
                    let percent = (priceRange.value / priceRange.max) * 100;
                    rangeValue.style.left = `calc(${percent}% - 20px)`;
                });
            </script>
            <!-- المزيد من خيارات الفلترة (العلامة التجارية، تقييم، إلخ) -->
        </div>
    </div>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@Url.Content($"/products/{product.Image ?? "default-product.png"}")" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">السعر: @product.Price شيكل</p>
                        <p class="card-text">التقييم: @(product.Rating.ToString("N1")) ★</p>
                        <a asp-controller="Customer" asp-action="ProductDetails" asp-route-id="@product.Id" class="btn btn-primary">عرض المنتج</a>
                        <button class="btn btn-success">أضف إلى السلة</button>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- ترقيم الصفحات -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item ">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">السابق</a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item " aria-current="page">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">التالي</a>
            </li>
        </ul>
    </nav>
</div>