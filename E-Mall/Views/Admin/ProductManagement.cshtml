@model List<E_Mall.Models.Product>

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "إدارة المنتجات";
}
<link rel="stylesheet" href="~/css/storemanagement.css" />

<div class="store-management-container">
    <h2 class="text-center mb-5">جميع المنتجات</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="CreateP" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة منتج جديد
        </a>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center align-middle">اسم المنتج</th>
                    <th class="text-center align-middle">وصف المنتج</th>
                    <th class="text-center align-middle">السعر</th>
                    <th class="text-center align-middle">الفئة</th>
                    <th class="text-center align-middle">مميز</th>
                    <th class="text-center align-middle">الكمية في المخزون</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td class="text-center align-middle">@product.Name</td>
                        <td class="text-center align-middle">@product.Description</td>
                        <td class="text-center align-middle">@product.Price</td>
                        <td class="text-center align-middle">@product.Category</td>
                        <td class="text-center align-middle">@product.Featured</td>
                        <td class="text-center align-middle">@product.QuantityInStock</td>
                        <td style="white-space:nowrap" class="text-center align-middle">
                            <a class="btn btn-primary btn-sm" asp-action="EditP" asp-route-id="@product.Id">تعديل</a>
                            <a class="btn btn-primary btn-sm" asp-action="DeleteP" asp-route-id="@product.Id">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>