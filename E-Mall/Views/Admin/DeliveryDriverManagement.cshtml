@model IEnumerable<E_Mall.Models.DeliveryDriver>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "إدارة سائقي التوصيل";
}

<link rel="stylesheet" href="~/css/deliverydrivermanagement.css" />

<div class="delivery-driver-management-container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة سائق توصيل جديد
        </a>
    </div>
    <div class="delivery-driver-management-container">
        <form asp-action="DeliveryDriverManagement" method="get" class="form-inline">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="ابحث عن..." name="SearchString" value="@ViewData["CurrentFilter"]" />
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" style="padding-bottom:10px;">
                        <i class="fas fa-search"></i> بحث
                    </button>
                    <a asp-action="DeliveryDriverManagement" class="btn btn-outline-secondary">
                        <i class="fas fa-sync-alt"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="driver-card">
                    <div class="driver-info">
                        <h2 style="text-align:center">@Html.DisplayFor(modelItem => item.DriverName)</h2>
                        <p class="driver-details">
                            <i class="fas fa-envelope"></i> @Html.DisplayFor(modelItem => item.DriverEmail)<br />
                            <i class="fas fa-phone"></i> @Html.DisplayFor(modelItem => item.DriverPhone)<br />
                            <i class="fas fa-car"></i> @Html.DisplayFor(modelItem => item.DriverCarInfo)<br />
                            <i class="fas fa-map-marker-alt"></i> @Html.DisplayFor(modelItem => item.CoverageArea)<br />
                            <i class="fas fa-check-circle"></i> @(item.IsActive ? "نشط" : "غير نشط")
                        </p>
                    </div>
                    <div class="actions">
                        <a asp-action="Edit" asp-route-id="@item.Id">تعديل</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>