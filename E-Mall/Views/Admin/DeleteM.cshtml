@model E_Mall.Models.Merchant

@{
    ViewData["Title"] = "حذف التاجر";
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/css/MerchantManagement.css" />

<div class="delete-delivery-driver-container">
    <h1>@ViewData["Title"]</h1>

    <h3>هل أنت متأكد أنك تريد حذف هذا؟</h3>
    <div>
        <h4>التاجر</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MerchantName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MerchantName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MerchantEmail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MerchantEmail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MerchantPhone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MerchantPhone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StoreName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StoreName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StoreLink)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StoreLink)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
        </dl>

        <form asp-action="DeleteM">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="حذف" class="btn btn-danger" /> |
            <a asp-action="MerchantManagement">العودة إلى القائمة</a>
        </form>
    </div>
</div>