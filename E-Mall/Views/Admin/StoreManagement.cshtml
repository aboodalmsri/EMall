@model List<Store>

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "إدارة المتاجر";
}
<link rel="stylesheet" href="~/css/storemanagement.css" />

<div class="store-management-container">
    <h2 class="text-center mb-5">جميع المتاجر</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="CreateS" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة متجر جديد
        </a>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center align-middle">التاجر</th>
                    <th class="text-center align-middle">اسم المتجر</th>
                    <th class="text-center align-middle">الصنف</th>
                    <th class="text-center align-middle">الوصف</th>
                    <th class="text-center align-middle">مكان التواجد</th>
                    <th class="text-center align-middle">مميز</th>
                    <th class="text-center align-middle">نشط</th>
                    <th class="text-center align-middle">التقييم</th>
                    <th class="text-center align-middle">عدد المنتجات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var store in Model)
                {
                    <tr>
                        <td class="text-center align-middle">@store.MerchantId</td>
                        <td class="text-center align-middle">@store.Name</td>
                        <td class="text-center align-middle">@store.Category?.Name</td>
                        <td class="text-center align-middle">@store.Description</td>
                        <td class="text-center align-middle">@store.Location</td>
                        <td class="text-center align-middle">@store.Featured</td>
                        <td class="text-center align-middle">@store.IsActive</td>
                        <td class="text-center align-middle">@store.Rating</td>
                        <td class="text-center align-middle">@store.ProductCount</td>
                        <td style="white-space:nowrap" class="text-center align-middle">
                            <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="EditS" asp-route-id="@store.Id">تعديل</a>
                            <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="DeleteS" asp-route-id="@store.Id">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>