
@model IEnumerable<E_Mall.Models.Category>

@{
    ViewData["Title"] = "إدارة الأصناف";
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/css/storemanagement.css" />

<div class="store-management-container">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="CreateC" class="btn btn-primary">إضافة صنف جديد</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src="@Url.Content("~/category/" + item.Image)" alt="@item.Name" style="max-height: 50px; max-width: 50px;" />
                    </td>
                    <td>
                        <a asp-action="EditC" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">تعديل</a>
                        <a asp-action="DeleteC" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>