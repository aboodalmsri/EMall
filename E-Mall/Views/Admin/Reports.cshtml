@model E_Mall.Models.ViewModels.ReportsViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "التقارير";
}

<link rel="stylesheet" href="~/css/reports.css">

<div class="reports-container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="report-section">
                <h2>أداء المنتجات</h2>
                <table class="report-table">
                    <thead>
                        <tr>
                            <th>المنتج</th>
                            <th>عدد المبيعات</th>
                            <th>التقييم</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.ProductPerformances)
                        {
                            <tr>
                                <td>@product.ProductName</td>
                                <td>@product.SalesCount</td>
                                <td>
                                    @for (int i = 0; i < (int)product.AverageRating; i++)
                                    {
                                        <span class="star">★</span>
                                    }
                                    @for (int i = 0; i < 5 - (int)product.AverageRating; i++)
                                    {
                                        <span class="star">☆</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- List and style Data of Top Trader-->
        <div class="col-md-6">
            <div class="report-section">
                <h2>أفضل المتاجر</h2>
                <ul class="list-group">
                    @foreach (var store in Model.TopStores)
                    {
                        <li class="list-group-item">@store.StoreName (@store.TotalRevenue ر.س)</li>
                    }
                </ul>
            </div>
        </div>
    </div>

</div>